pipeline {
    agent any

    tools {
        nodejs "TINnode-devops"
    }
  
    stages {
        stage ('cleanup'){
            steps{
                cleanWs()
            }
        }
        stage('fetch app code') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }
        stage ('Install dependencies'){
            steps{
                sh 'npm install'
            }
        }
    }
}
