pipeline {
    agent any
    environment{
        DOCKER_USER = credentials('DOCKER_USERNAME')
        DOCKER_PASWORD = credentials('DOCKER_WACHTWOORD')
    }

    tools {
        nodejs "TINnode-devops"
    }
  
    stages {
        stage ('cleanup'){
            steps{
                cleanWs()
            }
        }
        stage('fetch app code') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }
        stage ('Install dependencies'){
            steps{
                sh 'npm install'
            }
        }
        stage('unittest'){
            steps{
                sh 'npm test'
                junit '**/junit.xml'
            }
        }
     
        stage('build artifact'){
            steps{
                sh 'docker login -u "$DOCKER_USER" -p "$DOCKER_PASWORD" docker.io'
                sh 'docker build . -t jester01/test:latest'
                sh 'docker images'
            }
        }
        stage('push artifact'){
            steps{
                 sh 'docker push jester01/test:latest'
            
            }
        }
    }
}
