pipeline {
    agent any
    tools {
        nodejs "TINnode-devops"
    }

    stages {
        stage ('cleanup'){
            steps{
                cleanWs()
            }
        }
        stage('fetch app code') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }
        stage ('Install dependencies'){
            steps{
                sh 'npm install'
            }
        }
        stage('unittest'){
            steps{
                sh 'npm test'
                junit '**/junit.xml'
            }
        }
     
        stage('build artifact'){
            steps{
                sh "docker login -u ${env.DOCKER_USERNAME} -p ${env.DOCKER_WACHTWOORD} docker.io"
                sh 'docker build . -t jester01/test:latest'
                sh 'docker images'
            }
        }
        stage('push artifact'){
            steps{
                 sh 'docker push jester01/test:latest'
            
            }
        }
        stage('deployment'){
            sh 'docker rm -vf $(docker ps -aq)'
            sh 'docker rmi -f $(docker images -aq)'
            sh 'docker run -d -p 3000:8080 jester01/test:latest'
        }
    }
}
